<html>
    <head>
        <title>Dogs editor</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery-3.6.0.min.js"></script>
    </head>
    <body>
        <h1>Update data</h1>
        
        <form action="modify" method="PUT"></form>            
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value={{dog.age}}><br><br>
            <label for="race">Race:</label>
            <input type="text" id="{{race}}" name="race" value={{dog.race}}><br><br>
            <label for="color">Color:</label>
            <input type="text" id="color" name="race" value={{dog.color}}><br><br>
            <input type="submit" value="Submit">
            
        </form>
        <script src="/js/bootstrap.js"></script>
    </body>
</html>