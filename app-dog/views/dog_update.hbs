<html>
    <head>
        <title>Dogs editor</title>
        <link rel="stylesheet" href="/css/bootstrap.min.css">
        <script src="/js/jquery-3.6.0.min.js"></script>
    </head>
    <body>
        <h1>Update data</h1>
        
        <form action="modify" method="PUT"></form>            
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value={{dog.age}}><br><br>
            <label for="race">Race:</label>
            <input type="text" id="race" name="race" value={{dog.race}}><br><br>
            <label for="color">Color:</label>
            <input type="text" id="color" name="race" value={{dog.color}}><br><br>
            <input type="button" class="btn btn-dark" onclick="window.fetch('http://localhost:3000/dogs/update/'+{{dog.id}}+'/'+$('#age').val()+'/'+$('#race').val()+'/'+$('#color').val(), {method: 'PUT'})" value="Ok"></input>
        </form>
        <script>
            const dg = {
                age: $('#age').val(),
                race: $('#race').val(),
                color: $('#color').val()
            };
        </script>
        <script src="/js/bootstrap.js"></script>
    </body>
</html>